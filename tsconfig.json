{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./lib",
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}